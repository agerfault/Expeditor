{% extends 'default_manager.html.twig' %}

{% block title %}{{parent()}}- Commandes{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function() { 
        $(".select2").select2({ width: '100%' });
        });
    </script>
{% endblock %}

{% block body %}
<div class="col-md-10 col-sm-11 display-table-cell v-align">
    <div class="user-dashboard">

        <div class="row">
            <div class='col-sm-11'>
                <div class='well well-sm' style="box-shadow: 2px 2px 5px #656565; margin-top: 3px;">
                    <h4>Gestion des commandes</h4>
                </div>
            </div>
            <div class='col-sm-1'>
            </div>
        </div>

        <div class='row' style='margin-bottom: 10px;'>
            <div class='col-sm-1'>
            </div>
            <div class='col-sm-2'>
            </div>
            <div class='col-sm-4'>
                <form class="form-inline">
                    <div class="form-group">
                        <div class="input-group">
                            <select class='select2'>
                                {% for employe in employes %}
                                    <option>{{employe.nom}}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm"> Afficher</button>
                </form>
            </div>	
            <div class='col-sm-5'>
            </div>
        </div>
        <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">CLIENT</th>
                <th class="text-center">DATE</th>
                <th class="text-center">STATUT</th>
                <th class="text-center">EMPLOYÉ AFFECTÉ</th>
                <th class="text-center">DATE AFFECTATION</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        {% for commande in commandes %}
            
            <tr>
                
                
                
                <td class="text-center">{{commande.idcommande}}</td>
               <td class="text-center">{{commande.nomcli}}</td>
                 <td class="text-center">{{commande.date | date('d/m/Y')}}</td>
                <td class="text-center"><span class="label label-{% if commande.statut == "En attente" %}danger{% elseif commande.statut == "En cours" %}warning{% else %}success{% endif %}">{{commande.statut}}</span></td>
                <td class="text-center">{{ commande.nomemp }}</td>
                <td class="text-center">{{commande.date | date('d/m/Y')}}</td>
                <td class="text-center"><a class='btn btn-warning {% if commande.statut != "En cours" %}disabled{% endif %}' href="#"><i class="fa fa-pencil" aria-hidden="true"></i></a></td>
            {# #}
            </tr>
        {% endfor %}
        </table>
    </div>
</div>
{% endblock %}
