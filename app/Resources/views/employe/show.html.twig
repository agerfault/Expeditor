{% extends 'base.html.twig' %}

{% block body %}
    <h1>Employe</h1>

    <table>
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ employe.nom }}</td>
            </tr>
            <tr>
                <th>Motdepasse</th>
                <td>{{ employe.motdepasse }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ employe.statut }}</td>
            </tr>
            <tr>
                <th>Idemploye</th>
                <td>{{ employe.idemploye }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('employe_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('employe_edit', { 'id': employe.idemploye }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
