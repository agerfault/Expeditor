{% extends 'base.html.twig' %}

{% block title %}{{parent()}}- Articles{% endblock %}

{% block body %}
    <div class="row">
        <div class='col-sm-1'>
        </div>
        <div class='col-sm-10'>
            <div class='well well-sm well-title'>
                <h4>Modifier un article</h4>
            </div>
        </div>
        <div class='col-sm-1'>
        </div>
    </div>

    <div class="container">
	<div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="well well-sm">

                    {{form_start(edit_form, { 'attr': {'class': 'form-horizontal'} })}}

                     <div class="form-group">
                         <div class='col-sm-1'></div>
                             <label class="control-label col-sm-4" for="nom">{{ form_label(edit_form.nom) }}</label>
                             <div class="col-sm-6">
                                 {{ form_widget(edit_form.nom) }}
                             </div>
                     </div>

                     <div class="form-group">
                         <div class='col-sm-1'></div>
                             <label class="control-label col-sm-6" for="nom">{{ form_label(edit_form.poids) }}</label>
                             <div class="col-sm-4">
                                 {{ form_widget(edit_form.poids) }}
                             </div>
                     </div>
                     <center>
                         <a href="{{ path('article_index') }}" class='btn btn-primary' style='margin-right: 25px;'><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour</a><input class='btn btn-success' type="submit" value="Modifier" />
                     </center>   
                     {{ form_end(edit_form) }}

                </div>
            </div>
	</div>
    </div> 
{% endblock %}
