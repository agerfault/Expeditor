{% extends 'base.html.twig' %}

{% block title %}{{parent()}}- Gestion commandes{% endblock %}

{% block body %}
    <div class="row">
        <div class='col-sm-1'>
        </div>
        <div class='col-sm-10'>
            <div class='well well-sm well-title'>
                <h3>Traitement de la commande N° {{gestioncommandes[0].idcommande}}</h3>
            </div>
        </div>
        <div class='col-sm-1'>
        </div>
    </div>
    
    <div class='row'>
        <div class='col-md-10 col-md-offset-1'>
            <form action="{{ path('validerCommande', {'id' : gestioncommandes[0].idcommande}) }}" method="POST">
            <h2><small>Entreprise :</small> {{gestioncommandes[0].nomClient}}</h2>
            <h3><small>Adresse :</small> {{gestioncommandes[0].adresse}}</h3>
            <hr>
            <h4><span class="glyphicon glyphicon-shopping-cart"></span> <u>Articles commandés</u></h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Article</th>
                            <th>Quantité</th>
                            <th>Préparés</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for article in gestioncommandes %}
                        <tr>
                            <td>{{article.nom}}</td>
                            <td>{{article.quantite}}</td>
                            <td class="col-xs-3 nb-articles-ajoutes">
                                <div class="form-group">
                                    <input type="text" class="form-control" name='articles[]' placeholder="Saisir nombre" />
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <hr>
            <div class="col-md-6 col-md-offset-3">
                    <button type="reset" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Annuler</button>
                    <button type="submit" class="btn btn-success pull-right"><span class="glyphicon glyphicon-ok"></span> Valider</button>
            </div>
            </form>
        </div>
    </div>
{% endblock %}
